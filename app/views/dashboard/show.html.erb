<% if @user == current_user %>
<div class="dashboard">
	<%= render 'dashboard/left_section' %>
	<div class="right-section">
		<div class="create_post">
			<%= render 'posts/form' %>
		</div>
		<% if @user.sign_in_count == 1 && @user.posts.count == 0 %>
			<div class="first_loggin_links">
				<%= link_to "Fill up your profile..", profile_path(@user), class: "btn btn-default profile_link" %>
				<%= link_to "Analyze your health by logging your daily activities..", day_logger_path(:all), class: "btn btn-default logger_link" %>
				<%= link_to "Get to know your friends..", "#", class: "btn btn-default friends_link" %>
			</div>
		<% else %>
			<%= render 'posts' %>
		<% end %>
	</div>
</div>
<% end %>
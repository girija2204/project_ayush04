<div class="profile">
	<%= render 'profiles/left_section' %>
	<div class="right-section">
		<div id="all_posts">
			<div class="all_sections">
				<h1>ALL POSTS
				<span class="glyphicon glyphicon-magnet"></span>
				</h1>
				<div class="details_section">
					<% if @user.posts.exists? %>
						<% @user.posts.each do |post| %>
						<div class="show_posts">
							<div class="show_post_title">
								<%= link_to post.title.titleize, post, class: "post_title" %>
							</div>

							<div class="show_post_created_at">
								<p class="text-muted"><%= post.created_at.strftime("%d %B, %Y") %>
									<span class="glyphicon glyphicon-user"></span>
									<%= link_to "#{post.user.first_name.titleize} #{post.user.last_name.titleize}", profile_path(post.user)%>
									<span class="glyphicon glyphicon-comment"></span>
									<%= post.comments.count %> Comments
									</p>
							</div>
							<div class="show_post_description">
								<%= truncate(post.content, length: 200) { link_to "read more", post} %>
							</div>
						</div>
						
						<% end %>
					<% else %>
						<p class="text-muted no_record">
							<% if @user == current_user %>
								You have no Posts to show..
							<% else %>
								<%= @user.first_name %> has no posts to show..
							<% end %>
						</p>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>
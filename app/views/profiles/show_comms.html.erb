<div class="profile">
	<%= render 'profiles/left_section' %>
	<div class="right-section">
		<div id="show_comms">
			<div class="all_sections">
				<h1>COMMUNITIES
				<span class="glyphicon glyphicon-king"></span>
				</h1>
				<div class="details_section">
					<% if @user.comms.exists? %>
						<% @user.comms.each do |comm| %>
							<p class="p_comm"><strong><%= link_to comm.c_name, disc_board_path(comm.id), class: "comms" %></strong></p>
						<% end %>
					<% else %>
						<p class="text-muted no_record">
							<% if @user == current_user %>
								You have not joined in any communities..
							<% else %>
								<%= @user.first_name %> has not joined in any communities..
							<% end %>
						</p>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>
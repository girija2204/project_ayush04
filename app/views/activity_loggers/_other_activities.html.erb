					<%= f.number_field :quantities, class: "form-control", placeholder: "00" %>
					<%= f.submit "Save", class: "btn btn-primary" %>
				</div>
			</div>
		<% end %>
	</div>

	<div id="sleep_time">
		<%= form_for(current_user.activity_loggers.new) do |f| %>
			<div class="form-group">
				<%= f.label "Activity Date" %>
				<%= f.date_field :activity_date, class: "form-control" %>
				<%= f.hidden_field :activity_type, value: "Sleep Time" %>
				<%= f.label "Sleeping Time" %>

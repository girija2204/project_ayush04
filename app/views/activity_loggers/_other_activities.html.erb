				<%= f.date_field :activity_date, class: "form-control" %>
				<%= f.hidden_field :activity_type, value: "Alchohol Intake" %>
				<%= f.label "Amount of Alchohol in ml" %>
				<div class="activity_field">
					<%= f.number_field :quantities, class: "form-control", placeholder: "00" %>
					<%= f.submit "Save", class: "btn btn-primary" %>
				</div>
			</div>
		<% end %>
	</div>

	<div id="cigarettes_intake">

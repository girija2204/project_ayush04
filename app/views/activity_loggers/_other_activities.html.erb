				<%= f.hidden_field :activity_type, value: "Day Active" %>
				<%= f.label "How active was your day" %>
				<div class="activity_field">
					<%= f.number_field :quantities, class: "form-control" %>
					<%= f.submit "Save", class: "btn btn-primary" %>
				</div>
			</div>
		<% end %>
	</div>
</div>
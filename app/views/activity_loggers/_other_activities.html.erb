<script type="text/javascript">
	$(document).ready(function(){
		$('#alchohol_intake').show();
		$('#cigarettes_intake').hide();
		$('#water_intake').hide();
		$('#sleep_time').hide();
		$('#day_active').hide();
		$('#alchohol_btn').click(function(){
			$('#alchohol_intake').show();
			$('#cigarettes_intake').hide();
			$('#water_intake').hide();
			$('#sleep_time').hide();
			$('#day_active').hide();
		});
		$('#cigarettes_btn').click(function(){
			$('#alchohol_intake').hide();
			$('#cigarettes_intake').show();
			$('#water_intake').hide();
			$('#sleep_time').hide();
			$('#day_active').hide();
		});
		$('#water_btn').click(function(){
			$('#alchohol_intake').hide();
			$('#cigarettes_intake').hide();
			$('#water_intake').show();
			$('#sleep_time').hide();
			$('#day_active').hide();
		});
		$('#sleep_btn').click(function(){
			$('#alchohol_intake').hide();
			$('#cigarettes_intake').hide();
			$('#water_intake').hide();
			$('#sleep_time').show();
			$('#day_active').hide();
		});
		$('#active_btn').click(function(){
			$('#alchohol_intake').hide();
			$('#cigarettes_intake').hide();
			$('#water_intake').hide();
			$('#sleep_time').hide();
			$('#day_active').show();
		});
	});
</script>
<div class="other_activities">
	<ul class="nav nav-tabs">
		<li id="alchohol_btn"><%= link_to "Alchohol Intake", "#alchohol_intake" %></li>
		<li id="cigarettes_btn"><%= link_to "Cigarettes Intake", "#cigarettes_intake" %></li>
		<li id="water_btn"><%= link_to "Water Intake", "#water_intake" %></li>
		<li id="sleep_btn"><%= link_to "Sleep Time", "#sleep_time" %></li>
		<li id="active_btn"><%= link_to "Day Active", "#day_active" %></li>
	</ul>

	<div id="alchohol_intake">
		<%= form_for(current_user.activity_loggers.new) do |f| %>
			<div class="form-group">

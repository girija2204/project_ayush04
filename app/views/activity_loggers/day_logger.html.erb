<div class="show_activities">
	<div class="dropdown">
		<a data-toggle="dropdown" href="#">Select View</a>
		<ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
			<li><%= link_to 'Day View', day_logger_path(:all) %></li>
			<li><%= link_to 'Week View', week_logger_path(:all) %></li>
			<li><%= link_to 'Month View', month_logger_path(:all) %></li>
		</ul>
	</div>

	<div class="dropdown">
		<a data-toggle="dropdown" href="#">Select Activities</a>
		<ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
			<li><%= link_to 'All Activities', day_logger_path(:all) %></li>
			<li><%= link_to 'Running', day_logger_path(:running) %></li>
			<li><%= link_to 'Walking', day_logger_path(:walking) %></li>
			<li><%= link_to 'Exercise', day_logger_path(:exercise) %></li>
		</ul>
	</div>

	<div id="day_view">
		<div id="all_activities">
			<% @activities.group_by(&:date).sort.each do |date, date_activity| %>
				<div class="date_activity">
					<h4><%= date %></h4>
					<% date_activity.each do |activity| %>
						<p><%= "#{activity.activity_type.titleize} of #{activity.quantities} #{activity.activity_measures}" %></p>
					<% end %>
				</div>
			<% end %>
		</div>
	</div>

</div>
<% if @discs.any? %>
	<% @discs.each do |disc| %>
		<div class="show_discs">
			<div class="show_disc_content">
				<%= disc.content %>
			</div>
			<div class="show_disc_created_at">
				<p class="text-muted"><%= time_ago_in_words(disc.created_at) %> ago by <%= link_to "#{disc.user.first_name.titleize} #{disc.user.last_name}", profile_path(disc.user) %></p>
			</div>
			<div class="comments_section">
				<div class="count_comments">
					<% if disc.d_comments.any? %>
						<p><%= disc.d_comments.count %> Comments</p>
					<% end %>				
				</div>
				<div class="show_comments">
					<% if disc.d_comments.any? %>
						<% disc.d_comments.each do |dcomment| %>
							<div class="comment_content">
								<%= dcomment.content %>
							</div>
							<div class="comment_created_at">
								<p class="text-muted">written <%= time_ago_in_words(dcomment.created_at) %> ago by <%= "#{dcomment.user.first_name} #{dcomment.user.last_name}" %></p>
							</div>
						<% end %>
					<% end %>
				</div>
				<div class="add_comment">
					<%= form_for([disc, disc.d_comments.build]) do |f| %>
						<div class="form-group">
							<%= f.text_field :content, placeholder: "Enter a comment", class: "form-control" %>
						</div>
						<div><%= hidden_field_tag(:comm_id, @comm.id) %></div>
						<div><%= hidden_field_tag(:disc_id, disc.id) %></div>
						<div class="form-group">
							<%= f.submit "Comment", class: "btn btn-primary" %>
						</div>
					<% end %>
				</div>
			</div>
		</div>
	<% end %>
<% end %>
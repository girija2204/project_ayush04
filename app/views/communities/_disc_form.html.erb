<%= form_for(@comm.discussions.new) do |f| %>
	<div class="form-group">
		<%= f.text_field :content, placeholder: "Yo, Let's Start a Discussion here..", class: "form-control" %>
	</div>
	<div><%= hidden_field_tag(:comm_id, @comm.id) %></div>
	<div class="form-group">
		<%= f.submit "Submit", class: "btn btn-primary" %>
	</div>
<% end %>
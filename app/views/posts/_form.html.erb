<script type="text/javascript">
	$(document).ready(function(){
		$('#post_title').focus();
	});
</script>
<%= form_for(Post.new) do |f| %>
  

  <div class="form-group">
    <%= f.text_field :title, placeholder: "Give a title for your post", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.text_area :content, placeholder: "What's with it", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "Post", class: "btn btn-post" %>
  </div>
<% end %>
